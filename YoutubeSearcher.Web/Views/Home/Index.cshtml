@{
    ViewData["Title"] = "YouTube Müzik İndirici";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">YouTube Müzik İndirici</h1>
            
            <!-- Arama Bölümü -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <input type="text" id="searchQuery" class="form-control form-control-lg" 
                                   placeholder="Sanatçı veya şarkı adı girin..." />
                        </div>
                        <div class="col-md-2">
                            <select id="formatSelect" class="form-select form-select-lg">
                                <option value="mp3" selected>MP3</option>
                                <option value="mp4">Video</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button id="searchBtn" class="btn btn-primary btn-lg w-100">Ara</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Arama Sonuçları -->
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-0">Arama Sonuçları</h5>
                        <small id="resultCount" class="text-muted">0 sonuç bulundu</small>
                    </div>
                    <div>
                        <button id="pauseBtn" class="btn btn-sm btn-warning me-2" style="display: none;">
                            <i class="bi bi-pause-fill"></i> Duraklat
                        </button>
                        <button id="resumeBtn" class="btn btn-sm btn-info me-2" style="display: none;">
                            <i class="bi bi-play-fill"></i> Devam Et
                        </button>
                        <button id="downloadSelectedBtn" class="btn btn-sm btn-success" style="display: none;">
                            Seçilenleri İndir
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row g-3" id="searchResults">
                        <!-- Sonuçlar buraya eklenecek - 1 sağa 1 sola, alt satıra geç -->
                    </div>
                </div>
            </div>

            <!-- Progress Bar -->
            <div id="progressSection" class="mt-4" style="display: none;">
                <div class="progress" style="height: 25px;">
                    <div id="progressBar" class="progress-bar progress-bar-striped progress-bar-animated" 
                         role="progressbar" style="width: 0%">0%</div>
                </div>
                <p id="progressText" class="text-center mt-2"></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/youtube-searcher.js"></script>
}
