@{
    ViewData["Title"] = "Playlist Arama";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Playlist Arama</h1>

            <!-- Kanal Arama Bölümü -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <input type="text" id="playlist" class="form-control form-control-lg"
                                   placeholder="Playlist URL girin"
                                   value="https://www.youtube.com/playlist?list=PLGBuKfnErZlDXoq9Naa6qYtstCv_8CVRQ" />
                        </div>
                        <div class="col-md-2">
                            <select id="formatSelect" class="form-select form-select-lg">
                                <option value="mp3" selected>MP3</option>
                                <option value="mp4">Video</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button id="searchChannelBtn" class="btn btn-primary btn-lg w-100">Ara</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Kanal Bilgileri -->
            <div id="playlistInfo" class="card mb-4" style="display: none;">
            </div>

            <!-- Oynatma Listeleri -->
            <div id="downloadedVideos" class="card mb-4" style="display: none;">
            </div>

            <!-- Playlist İçeriği -->
            <div id="playlistVideosSection" class="card" style="display: none;">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <h5 id="playlistTitle" class="mb-0"></h5>
                        <small id="playlistVideoCount" class="text-muted"></small>
                    </div>
                    <div>
                        <button id="selectAllBtn" class="btn btn-sm btn-outline-primary me-2">Tümünü Seç</button>
                        <button id="deselectAllBtn" class="btn btn-sm btn-outline-secondary me-2">Seçimi Kaldır</button>
                        <button id="downloadPlaylistBtn" class="btn btn-sm btn-success" style="display: none;">
                            Seçilenleri İndir
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row g-3" id="playlistVideos">
                        <!-- Videolar buraya eklenecek -->
                    </div>
                </div>
            </div>

            <!-- Progress Bar -->
            <div id="progressSection" class="mt-4" style="display: none;">
                <div class="progress" style="height: 25px;">
                    <div id="progressBar" class="progress-bar progress-bar-striped progress-bar-animated"
                         role="progressbar" style="width: 0%">
                        0%
                    </div>
                </div>
                <p id="progressText" class="text-center mt-2"></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/playlist-searcher.js"></script>
}

<style type="text/css">
    .limitedheight {
        max-height: 320px;
        overflow-x: hidden;
        overflow-y: scroll;
    }
</style>


<style>
    .dv-header {
        padding: .75rem 1rem;
        border-bottom: 1px solid #e5e7eb;
        display: flex;
        align-items: center;
        gap: 8px;
        font-weight: 600;
    }

    .dv-card {
        background: #fff;
        border: 1px solid #eef2f7;
        border-radius: .5rem;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        transition: box-shadow .15s ease, transform .15s ease;
        height: 100%;
    }

        .dv-card:hover {
            box-shadow: 0 6px 18px rgba(0,0,0,.08);
            transform: translateY(-2px);
        }

    .dv-thumb-wrap {
        position: relative;
        aspect-ratio: 16 / 9;
        background: #f3f4f6;
        overflow: hidden;
    }

    .dv-thumb {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    .dv-duration {
        position: absolute;
        right: 8px;
        bottom: 8px;
        background: rgba(0,0,0,.75);
        color: #fff;
        font-size: 12px;
        line-height: 1;
        padding: 4px 6px;
        border-radius: 4px;
    }

    .dv-body {
        display: grid;
        gap: 8px;
        padding: 10px 12px 12px;
    }

    .dv-title {
        font-size: 14px;
        font-weight: 600;
        line-height: 1.3;
        color: #111827;
        text-decoration: none;
    }

        .dv-title:hover {
            text-decoration: underline;
        }

    .dv-author {
        font-size: 12px;
        color: #6b7280;
    }

    .dv-stats {
        display: flex;
        gap: 10px;
        align-items: center;
        font-size: 12px;
        color: #374151;
    }

    .dv-stat {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        white-space: nowrap;
    }

    /* Basit ikon yer tutucuları (isterseniz gerçek ikonlarla değiştirin) */
    .ico-eye::before {
        content: "👁️";
    }

    .ico-like::before {
        content: "👍";
    }
</style>
